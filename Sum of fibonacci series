import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int a=0,b=1;
        int sum=a;
        for(int i=1;i<n;i++) {
            int next=a+b;
            a=b;
            b=next;
            sum+=a;
        }
        System.out.println(sum);
    }
}
